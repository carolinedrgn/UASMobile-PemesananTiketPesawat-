<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ticketbookingapp">
    <!-- Izin Internet untuk koneksi ke backend nanti -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TicketBookingApp">
        <activity
            android:name=".activities.PromoBannerActivity"
            android:exported="false" />
        <activity
            android:name=".activities.FAQActivity"
            android:exported="false" />
        <activity
            android:name=".activities.PassengerDataFormActivity"
            android:exported="false" />
        <activity
            android:name=".activities.FlightItemActivity"
            android:exported="false" />
        <activity
            android:name=".activities.PaymentConfirmationActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false" /> <!-- Splash screen sebagai launcher -->
        <activity
            android:name=".activities.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Activity lainnya -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.BookingActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SearchResultsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.HistoryActivity"
            android:exported="false" />
    </application>

</manifest>